# Platform-aware command setting
# Linux: bash (default shell)
# macOS: zsh (default shell)
# Note: Ghostty doesn't support conditionals, so set this manually per platform
# On Linux, use: command = /bin/bash
# On macOS, use: command = /bin/zsh
command = /bin/zsh
# command = /bin/bash  # Uncomment for Linux
# command = tmux

theme = Nord
macos-option-as-alt=left
macos-titlebar-style=hidden
keybind = global:ctrl+t=toggle_quick_terminal
keybind = super+equal=increase_font_size:0.25
keybind = super+minus=decrease_font_size:0.25
font-family = "Hack Nerd Font"
# font-family = "Fira Code"
font-thicken = true
quick-terminal-position = right
quick-terminal-autohide = false
quick-terminal-screen = mouse
quick-terminal-animation-duration = 0
background-opacity = 0.7
background-blur = 50
